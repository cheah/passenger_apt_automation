			return
		fi
	<% end %>
	<% DEBIAN_DISTRIBUTIONS.each_pair do |codename, version| %>
		if [[ "$INPUT" = <%= codename.inspect %>
			|| "$INPUT" = "debian<%= version %>"
			|| "$INPUT" = "debian-<%= version %>" ]]
		then
			echo <%= codename.inspect %>
			return
		fi
	<% end %>

	return 1
}

