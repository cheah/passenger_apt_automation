{
	local INPUT="$1"

	<% UBUNTU_DISTRIBUTIONS.each_pair do |codename, version| %>
		if [[ "$INPUT" = <%= codename.inspect %>
			|| "$INPUT" = "ubuntu<%= version %>"
			|| "$INPUT" = "ubuntu-<%= version %>" ]]
		then
